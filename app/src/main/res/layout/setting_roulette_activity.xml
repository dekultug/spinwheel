<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSettingRouletteHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary_bold"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSettingRouletteClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/tvSettingRouletteTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSettingRouletteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/bold"
            android:paddingTop="@dimen/dimen_20"
            android:text="@string/setting_roulette_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_22"
            app:layout_constraintBottom_toTopOf="@id/vAddNewSettingRouletteSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vAddNewSettingRouletteSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vSettingRouletteDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_14"
        app:layout_constraintBottom_toBottomOf="@id/clSettingRouletteHeader" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_bg_n10_top_corner_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vSettingRouletteDivider">

        <ImageView
            android:id="@+id/ivSettingRouletteClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_32"
            android:src="@drawable/ic_oclock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:fontFamily="@font/regular"
            android:text="@string/duration_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16"
            app:layout_constraintBottom_toBottomOf="@id/ivSettingRouletteClock"
            app:layout_constraintStart_toEndOf="@id/ivSettingRouletteClock"
            app:layout_constraintTop_toTopOf="@id/ivSettingRouletteClock" />

        <com.amvfunny.dev.wheelist.presentaition.widget.slider.SpinSliderView
            android:id="@+id/ssvSettingRouletteTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSettingRouletteClock" />

        <View
            android:id="@+id/vSettingRouletteDividerFirst"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@color/divider_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ssvSettingRouletteTime" />

        <ImageView
            android:id="@+id/ivSettingRouletteSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/ic_speed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vSettingRouletteDividerFirst" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:fontFamily="@font/regular"
            android:text="@string/speed_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16"
            app:layout_constraintBottom_toBottomOf="@id/ivSettingRouletteSpeed"
            app:layout_constraintStart_toEndOf="@id/ivSettingRouletteSpeed"
            app:layout_constraintTop_toTopOf="@id/ivSettingRouletteSpeed" />

        <com.amvfunny.dev.wheelist.presentaition.widget.slider.SpinSliderView
            android:id="@+id/ssvSettingRouletteSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSettingRouletteSpeed" />

        <View
            android:id="@+id/vSettingRouletteDividerSecond"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/divider_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ssvSettingRouletteSpeed" />

        <ImageView
            android:id="@+id/ivSettingRouletteStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/ic_stop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vSettingRouletteDividerSecond" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:fontFamily="@font/regular"
            android:text="@string/stop_on_click_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16"
            app:layout_constraintBottom_toBottomOf="@id/ivSettingRouletteStop"
            app:layout_constraintStart_toEndOf="@id/ivSettingRouletteStop"
            app:layout_constraintTop_toTopOf="@id/ivSettingRouletteStop" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSettingRouletteStop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_16"
            android:thumb="@drawable/switch_custom_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/ivSettingRouletteStop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSettingRouletteStop"
            app:showText="false"
            app:track="@drawable/switch_custom_track"
            tools:checked="true" />

        <TextView
            android:id="@+id/tvSettingRouletteSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@drawable/shape_gradient_orange_primary_corner_12"
            android:fontFamily="@font/bold"
            android:paddingVertical="@dimen/dimen_12"
            android:text="@string/save_title"
            android:textSize="@dimen/dimen_text_size_16"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/flSettingRouletteAdmob" />

        <FrameLayout
            android:id="@+id/flSettingRouletteAdmob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@color/white">

            <include
                android:id="@+id/shimmer"
                layout="@layout/layout_banner" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>