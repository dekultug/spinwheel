<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvFieldSpinPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:paddingVertical="@dimen/dimen_8"
        android:textColor="@color/n8"
        android:textSize="@dimen/dimen_text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <View
        android:id="@+id/vFieldSpinPlayDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/n4"
        app:layout_constraintTop_toBottomOf="@id/tvFieldSpinPlay" />

</androidx.constraintlayout.widget.ConstraintLayout>