<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPreviewRouletteHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary_bold"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivPreviewRouletteClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintBottom_toBottomOf="@+id/tvPreviewRouletteTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPreviewRouletteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6"
            android:fontFamily="@font/bold"
            android:paddingTop="@dimen/dimen_20"
            android:text="@string/preview_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_22"
            app:layout_constraintBottom_toTopOf="@id/vAddNewPreviewRouletteSpace"
            app:layout_constraintStart_toEndOf="@+id/ivPreviewRouletteClose"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vAddNewPreviewRouletteSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vPreviewRouletteDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_14"
        app:layout_constraintBottom_toBottomOf="@id/clPreviewRouletteHeader" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_bg_n10_top_corner_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vPreviewRouletteDivider">

        <TextView
            android:id="@+id/tvPreviewRouletteWinnerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32"
            android:fontFamily="@font/bold"
            android:text="@string/winner_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPreviewRouletteWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_22"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/red_light"
            android:textSize="@dimen/dimen_text_size_22"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPreviewRouletteWinnerTitle"
            tools:text="Alejandro Ganacho"
            tools:visibility="visible" />

        <rubikstudio.library.LuckyWheelView
            android:id="@+id/lwvPreviewRoulette"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/dimen_30"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/tvPreviewRouletteEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPreviewRouletteWinner"
            app:layout_constraintWidth_default="percent"
            app:lkwBackgroundColor="@android:color/transparent"
            app:lkwSecondaryTextSize="13sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavPreviewRouletteAnimation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lwvPreviewRoulette"
            app:layout_constraintEnd_toEndOf="@id/lwvPreviewRoulette"
            app:layout_constraintStart_toStartOf="@id/lwvPreviewRoulette"
            app:layout_constraintTop_toTopOf="@id/lwvPreviewRoulette"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/fireworks_display"
            tools:visibility="gone" />

        <View
            android:id="@+id/vPreviewRouletteDividerSpaceCenter"
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPreviewRouletteEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_18"
            android:background="@drawable/shape_gradient_m60_corner_12"
            android:fontFamily="@font/bold"
            android:paddingVertical="@dimen/dimen_12"
            android:text="@string/edit_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16"
            app:layout_constraintBottom_toTopOf="@+id/rlPreviewRouletteAdmob"
            app:layout_constraintEnd_toEndOf="@id/vPreviewRouletteDividerSpaceCenter"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPreviewRouletteSaveSpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_18"
            android:background="@drawable/shape_gradient_orange_primary_corner_12"
            android:ellipsize="end"
            android:fontFamily="@font/bold"
            android:maxLines="1"
            android:paddingVertical="@dimen/dimen_12"
            android:text="@string/save_spin_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16"
            app:layout_constraintBottom_toTopOf="@+id/rlPreviewRouletteAdmob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/vPreviewRouletteDividerSpaceCenter" />


        <RelativeLayout
            android:id="@+id/rlPreviewRouletteAdmob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@color/white">


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>