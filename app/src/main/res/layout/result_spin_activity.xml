<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHomeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary_bold"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivResultSpinHome"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="@id/tvResultSpinTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivResultSpinClose"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintBottom_toTopOf="@id/vHomeSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResultSpinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6"
            android:fontFamily="@font/bold"
            android:paddingTop="@dimen/dimen_20"
            android:paddingBottom="@dimen/dimen_4"
            android:text="@string/result_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_22"
            app:layout_constraintBottom_toTopOf="@id/vHomeSpace"
            app:layout_constraintStart_toEndOf="@+id/ivResultSpinClose"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vHomeSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vResultSpinDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_14"
        app:layout_constraintBottom_toBottomOf="@id/clHomeHeader" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flResultSpin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_bg_n10_top_corner_16"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/rlResultSpinAdmob"
        app:layout_constraintTop_toBottomOf="@id/vResultSpinDivider">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="@dimen/dimen_20"
            android:background="@drawable/shape_bg_black_corner_12"
            android:layout_marginHorizontal="@dimen/dimen_16"
            app:layout_constraintBottom_toTopOf="@id/tvResultSpinTryAgain">

            <ImageView
                android:id="@+id/ivResultSpin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:src="@tools:sample/avatars" />

        </FrameLayout>



        <TextView
            android:id="@+id/tvResultSpinTryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@drawable/shape_gradient_orange_primary_corner_12"
            android:fontFamily="@font/bold"
            android:paddingVertical="@dimen/dimen_14"
            android:text="@string/try_again_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rlResultSpinAdmob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/n10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>