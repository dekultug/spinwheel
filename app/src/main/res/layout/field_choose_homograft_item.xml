<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFieldRouletteRankingBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_8"
        android:scaleX="1.04"
        android:src="@drawable/bg_winner"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.imageview.ShapeableImageView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ivFieldRouletteRankingBackground"
        app:layout_constraintEnd_toEndOf="@id/ivFieldRouletteRankingBackground"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/ivFieldRouletteRankingBackground">

        <TextView
            android:id="@+id/tvFiledChooseHomograftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textColor="@color/n10"
            android:textSize="@dimen/dimen_text_size_18"
            tools:text="Homograft" />

        <TextView
            android:id="@+id/tvFieldChooseHomograftContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6"
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textSize="@dimen/dimen_text_size_14"
            tools:text="Divide into random teams" />

        <TextView
            android:id="@+id/tvFieldChooseHomograftPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_18"
            android:background="@drawable/shape_gradient_orange_primary_corner_12"
            android:fontFamily="@font/bold"
            android:paddingHorizontal="@dimen/dimen_40"
            android:paddingVertical="@dimen/dimen_8"
            android:text="@string/play_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_18" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>