<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/n10">

    <ImageView
        android:id="@+id/ivLanguageBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_10"
        android:padding="@dimen/dimen_10"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="@dimen/dimen_6"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tvLanguageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_10"
        android:padding="@dimen/dimen_10"
        android:text="@string/language_title"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_size_22"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivLanguageBack"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLanguageSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10"
        android:padding="@dimen/dimen_10"
        android:src="@drawable/ic_tick_white"
        app:layout_constraintBottom_toBottomOf="@id/tvLanguageTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvLanguageTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLanguage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/dimen_24"
        app:layout_constraintBottom_toTopOf="@id/rlLanguageAdmob"
        app:layout_constraintTop_toBottomOf="@id/tvLanguageTitle" />

    <RelativeLayout
        android:id="@+id/rlLanguageAdmob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/white">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>