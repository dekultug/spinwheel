<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSpinRouletteHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary_bold"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSpinRouletteClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintBottom_toBottomOf="@id/tvSpinRouletteTitle"
            app:layout_constraintStart_toStartOf="parent"
           />

        <TextView
            android:id="@+id/tvSpinRouletteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6"
            android:fontFamily="@font/bold"
            android:paddingBottom="@dimen/dimen_4"
            android:paddingTop="@dimen/dimen_20"
            android:text="@string/roulette_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_22"
            app:layout_constraintBottom_toTopOf="@id/vAddNewSpinRouletteSpace"
            app:layout_constraintStart_toEndOf="@+id/ivSpinRouletteClose"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivSpinRouletteSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_6"
            android:src="@drawable/ic_setting"
            android:layout_marginStart="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            app:layout_constraintBottom_toBottomOf="@+id/tvSpinRouletteTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/vAddNewSpinRouletteSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vSpinRouletteDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_14"
        app:layout_constraintBottom_toBottomOf="@id/clSpinRouletteHeader" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_bg_n10_top_corner_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vSpinRouletteDivider">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rlSpinRouletteAdmob"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSpinRoultteMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSpinRouletteWinnerTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:fontFamily="@font/bold"
                    android:textAlignment="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="@dimen/dimen_16"
                    android:text="@string/winner_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_text_size_22"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSpinRouletteWinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:fontFamily="@font/semi_bold"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/dimen_text_size_22"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/dimen_16"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSpinRouletteWinnerTitle"
                    tools:text="Alejandro Ganacho"
                    tools:visibility="visible" />

                <rubikstudio.library.LuckyWheelView
                    android:id="@+id/lwvSpinRoulette"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_20"
                    app:layout_constraintBottom_toTopOf="@+id/llSpinRouletteShare"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSpinRouletteWinner"
                    app:layout_constraintWidth_default="percent"
                    app:lkwBackgroundColor="@android:color/transparent"
                    app:lkwSecondaryTextSize="13sp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lavSpinRouletteAnimation"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/lwvSpinRoulette"
                    app:layout_constraintEnd_toEndOf="@id/lwvSpinRoulette"
                    app:layout_constraintStart_toStartOf="@id/lwvSpinRoulette"
                    app:layout_constraintTop_toTopOf="@id/lwvSpinRoulette"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/fireworks_display"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llSpinRouletteShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_marginBottom="@dimen/dimen_6"
                    app:layout_constraintBottom_toTopOf="@id/tvSpinRouletteSpin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lwvSpinRoulette"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:fontFamily="@font/bold"
                        android:paddingVertical="@dimen/dimen_6"
                        android:text="@string/share_title"
                        android:textColor="@color/orange_primary_bold"
                        android:textSize="@dimen/dimen_text_size_16" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSpinRouletteSpin"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:background="@drawable/shape_gradient_orange_primary_corner_12"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="@dimen/dimen_74"
                    android:paddingVertical="@dimen/dimen_12"
                    android:text="@string/spin_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_text_size_16"
                    app:layout_constraintBottom_toBottomOf="@+id/ivSpinRouletteList"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivSpinRouletteList" />

                <ImageView
                    android:id="@+id/ivSpinRouletteList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_12"
                    android:src="@drawable/ic_list_option"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvSpinRouletteSpin" />

                <ImageView
                    android:id="@+id/ivSpinRouletteEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSpinRouletteSpin"
                    app:layout_constraintStart_toEndOf="@+id/tvSpinRouletteSpin"
                    app:layout_constraintTop_toTopOf="@id/tvSpinRouletteSpin" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


        <RelativeLayout
            android:id="@+id/rlSpinRouletteAdmob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@color/white">

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>