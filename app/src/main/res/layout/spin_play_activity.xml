<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHomeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary_bold"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSpinPlayClose"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_4"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintBottom_toTopOf="@id/vHomeSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSpinPlayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:paddingTop="@dimen/dimen_20"
            android:paddingBottom="@dimen/dimen_4"
            android:text="@string/spin_title"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dimen_6"
            android:textSize="@dimen/dimen_text_size_22"
            app:layout_constraintBottom_toTopOf="@id/vHomeSpace"
            app:layout_constraintStart_toEndOf="@+id/ivSpinPlayClose"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vHomeSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glSpinPlayH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <LinearLayout
        android:id="@+id/llSpinPlaySize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/shape_bg_light_stroke_corner_8"
        android:gravity="center"
        tools:visibility="visible"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_26"
        app:layout_constraintBottom_toBottomOf="@id/glSpinPlayH4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSpinPlaySizeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingVertical="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_12"
            android:text="@string/select_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_16" />

        <TextView
            android:id="@+id/tvSpinPlaySize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_size_18"
            tools:text="1" />

        <ImageView
            android:id="@+id/ivSpinPlayMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6"
            android:layout_marginEnd="@dimen/dimen_12"
            android:src="@drawable/ic_arrow_down_size" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/cvSpinPlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:elevation="@dimen/dimen_6"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/llSpinPlaySize"
        app:layout_constraintStart_toStartOf="@id/llSpinPlaySize"
        app:layout_constraintTop_toBottomOf="@id/llSpinPlaySize"
        tools:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSpinPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="@dimen/dimen_92" />

    </FrameLayout>

    <View
        android:id="@+id/vSpinPlayDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_14"
        app:layout_constraintBottom_toBottomOf="@id/clHomeHeader" />

    <FrameLayout
        android:id="@+id/flSpinPlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_bg_n10_top_corner_16"
        app:layout_constraintBottom_toTopOf="@+id/flSpinAdmob"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/vSpinPlayDivider">

        <com.amvfunny.dev.wheelist.presentaition.widget.spinview.SpinViewLayout
            android:id="@+id/spvSpinPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/flSpinAdmob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/white">


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>