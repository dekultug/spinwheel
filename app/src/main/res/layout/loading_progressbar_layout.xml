<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLoadingProgressbar"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        app:layout_constraintBottom_toTopOf="@id/lpiLoadingProgressbar"
        app:layout_constraintStart_toStartOf="@id/lpiLoadingProgressbar"
        android:src="@drawable/ic_launcher_background" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpiLoadingProgressbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:max="100"
        tools:progress="50"
        android:layout_marginHorizontal="@dimen/dimen_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>