<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFieldRouletteRankingBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_8"
        android:scaleX="1.04"
        android:src="@drawable/bg_roulette"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/tvFieldRouletteRankingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_16"
        android:fontFamily="@font/bold"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_size_22"
        app:layout_constraintStart_toStartOf="@id/ivFieldRouletteRankingBackground"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Roulette" />

    <TextView
        android:id="@+id/tvFieldRouletteRankingContent"
        android:layout_width="@dimen/dimen_250"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_size_16"
        app:layout_constraintStart_toStartOf="@id/tvFieldRouletteRankingTitle"
        app:layout_constraintTop_toBottomOf="@id/tvFieldRouletteRankingTitle"
        tools:text="A wheel spinner for a random picker." />

    <TextView
        android:id="@+id/tvFieldRouletteRankingPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_26"
        android:layout_marginBottom="@dimen/dimen_34"
        android:background="@drawable/shape_gradient_orange_primary_stroke_white_corner_12"
        android:fontFamily="@font/bold"
        android:paddingHorizontal="@dimen/dimen_40"
        android:paddingVertical="@dimen/dimen_8"
        android:text="@string/play_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_size_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvFieldRouletteRankingContent" />

</androidx.constraintlayout.widget.ConstraintLayout>