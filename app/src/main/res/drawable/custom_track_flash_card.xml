<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_100" />
            <solid android:color="@color/n4" />
            <size android:height="@dimen/dimen_20" />
            <stroke android:color="@color/n4" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_100" />
            <gradient android:endColor="@color/orange_gradient_second" android:startColor="@color/orange_gradient_first" />
            <size android:height="@dimen/dimen_20" />
            <stroke android:color="@color/n4" android:width="1dp"/>
        </shape>
    </item>
</selector>
